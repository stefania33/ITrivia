<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.triviaapp">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/trivia"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/trivia"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".admin.AddCategory" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />

        <activity android:name=".admin.CurrentLocation" />
        <activity android:name=".admin.Delete" />
        <activity android:name=".admin.AddQuestions" />
        <activity android:name=".admin.AdminPage" />
        <activity android:name=".CategoryScore" />
        <activity android:name=".Done" />
        <activity android:name=".Playing" />
        <activity android:name=".Start" />
        <activity android:name=".HomeScreen" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>